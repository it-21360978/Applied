<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A1ACE8"
    tools:context=".EditFeedbackActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:text="Update Feedback"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/star_edit_1"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toStartOf="@+id/star_edit_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/baseline_star_rate" />

    <ImageView
        android:id="@+id/star_edit_2"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toStartOf="@+id/star_edit_3"
        app:layout_constraintStart_toEndOf="@+id/star_edit_1"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/baseline_star_rate" />

    <ImageView
        android:id="@+id/star_edit_3"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toStartOf="@+id/star_edit_4"
        app:layout_constraintStart_toEndOf="@+id/star_edit_2"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/baseline_star_rate" />

    <ImageView
        android:id="@+id/star_edit_4"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toStartOf="@+id/star_edit_5"
        app:layout_constraintStart_toEndOf="@+id/star_edit_3"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/baseline_star_rate" />

    <ImageView
        android:id="@+id/star_edit_5"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="62dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/star_edit_4"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/baseline_star_rate" />

    <EditText
        android:id="@+id/feedback_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/field_bg"
        android:ems="10"
        android:hint="type your feedback here!"
        android:inputType="textLongMessage|textMultiLine|textCapSentences"
        android:minHeight="48dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#000000"
        android:textColorHint="#3F51B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/star_edit_1" />

    <Button
        android:id="@+id/edit_activity_button"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="120dp"
        android:backgroundTint="#3F51B5"
        android:text="Submit"
        android:textColor="#FFFFFF"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedback_edit_text" />
</androidx.constraintlayout.widget.ConstraintLayout>